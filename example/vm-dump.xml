<?xml version="1.0" encoding="utf-8"?>
<?xml-model href="/usr/share/libvirt/schemas/domain.rng"?>
<!-- 
    This is an example of parameters used to config a vm
    This is not a complete config
    This is not inteded to be a complete config
-->
<domain type="qemu">
    <name>demo</name>
    <metadata>
        <chaos:chaos xmlns:chaos="https://raw.githubusercontent.com/charly4chaos/KVM-Notes/main/data/libvirt-chaos.xsd">
            <chaos:tag name="cpu-isolation" />
            <chaos:tag name="display-toggle" />
            <chaos:shutdown mode="ask" timeout="60" />
        </chaos:chaos>
    </metadata>
</domain>